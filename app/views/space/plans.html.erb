
<ul id="plans">
  <li class="plan">
    <h3 class="plan-name">{{name}}</h3>
    <p class="plan-description">
      {{description}}
    </p>

    {{#cycle_costs}}
      <p class="price">{{display_price_per_cycle}} {{currency}} for {{cycle_duration}} Month</p>
    {{/cycle_costs}}

    {{#day_pass_price}}
      <p class="extra_price">{{display_day_pass_price}} {{currency}} for a day pass</p>
    {{/day_pass_price}}

    {{#time_passes}}
      {{#included_per_timespan}}
      <p class="sessions">
        {{included_per_timespan}} sessions included per {{included_timespan}}.<br />
        <!-- Sessions last from {{timespans}} !-->
      </p>
      {{/included_per_timespan}}
    {{/time_passes}}

    <a class="plan-link" href="{{url}}">Sign Up</a>
  </li>
  <script type="text/javascript" charset="utf-8">
    cobotFb(<%= @space_json %>, <%= @plans_json %>);
  </script>
</ul>
